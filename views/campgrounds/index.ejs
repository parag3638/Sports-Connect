<% layout('/layouts/boilerplate') -%> 

<div id="map" style="width: 100%; height:500px"></div>

  <h1>Sports facility available</h1>
  <div>
    <a href="/campgrounds/new">Want to start a business with us?</a>
  </div>
  
<% for(let i of campground){ %>
   <div class="card mb-3" >
     <div class="row">
        
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= i.title %> </h5>
            <p class="card-text"><%=i.description%></p>
            <p class="card-text">
              <small class="text-muted"><%=i.location%></small>
            </p>
            <a class="btn btn-primary" href="/campgrounds/<%=i._id%>">View <%= i.title %> </a>
         </div>
       </div>
     </div>
   </div>
<% } %>

<script>
  const campgrounds = {features: <%-JSON.stringify(campground)%>};
</script>

<script src="/javascripts/clusterMap.js"></script>
